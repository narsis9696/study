// .vscode/tasks.json
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build C file",
      "type": "shell",
      "command": "gcc",
      "args": [
        "-g",
        "${file}",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe"
      ],
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "build C++ file",
      "type": "shell",
      "command": "g++",
      "args": [
        "-g",
        "${file}",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe"
      ],
      "group": "build",
      "problemMatcher": []
    }
  ]
}